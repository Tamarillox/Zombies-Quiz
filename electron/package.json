{
  "name": "zombies-quiz",
  "version": "1.0.0",
  "description": "Zombies Quiz Desktop App",
  "main": "build/src/index.js",
  "scripts": {
    "build": "electron-rebuild",
    "electron:start": "electron .",
    "electron:make": "electron-builder build --win nsis"
  },
  "build": {
    "appId": "com.zombies.quiz",
    "productName": "Zombies Quiz",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/appIcon.ico"
    },
    "files": [
      "build/**/*",
      "app/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "build/src/index.js"
    }
  },
  "dependencies": {
    "@capacitor-community/electron": "^5.0.0",
    "chokidar": "~3.5.3",
    "electron-is-dev": "~2.0.0",
    "electron-serve": "~1.1.0",
    "electron-unhandled": "~4.0.1",
    "electron-updater": "^5.3.0",
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^26.2.2",
    "electron-builder": "~23.6.0",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.0.4"
  }
}